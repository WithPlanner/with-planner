<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        tools:context=".activity_community.CommunityPostActivity">

        <LinearLayout
            android:id="@+id/top_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back_48px"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:backgroundTint="#00ff0000"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="글 작성"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight="3"/>
            <Button
                android:id="@+id/doneBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="완료"
                android:textSize="18sp"
                android:backgroundTint="#ffffff"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/photo_linear"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageBtn"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:background="@drawable/round_btn"
                    android:backgroundTint="@color/light_gray"
                    android:src="@drawable/ic_photo_24dp" />

                <ImageView
                    android:id="@+id/imageArea"
                    android:visibility="gone"
                    android:layout_width="130sp"
                    android:layout_height="130sp"
                    android:layout_margin="10sp"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ff000000"/>
        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="제목"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ff000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/write_linear">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="내용"/>

            <EditText
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:textSize="13sp"
                android:hint="글 내용을 작성해주세요." />

        </LinearLayout>
    </LinearLayout>
</layout>